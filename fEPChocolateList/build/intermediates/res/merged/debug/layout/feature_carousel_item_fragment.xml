<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feature_carousel_item_fragment"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/feature_image_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/feature_image"
        android:scaleType="centerInside" />

	<RelativeLayout
	    android:id="@+id/text_container"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
    	android:gravity = "bottom"
    	android:background="#994d4d4d"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="22dp" >

	    <Button 
	        android:id="@+id/read_more_button"
	        android:text="@string/feature_read_more"
		  	android:layout_width="wrap_content"
		  	android:layout_height="26dp"
	        android:layout_below="@+id/title_label"
	        android:layout_alignParentLeft="true"
			android:background="@drawable/button_read_more"
	        android:textSize="16sp"
	        android:textColor="#ffffffff"
	        android:paddingLeft="8dp"
	        android:paddingRight="8dp"
	        android:layout_marginTop="2dp"
			android:includeFontPadding="false" />

	    <TextView
	        android:id="@+id/title_label"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:textIsSelectable="false"
	        android:paddingBottom="2dp"
	        android:textColor="#ffffffff"
	        android:textSize="18sp"
	        android:shadowColor="#ff000000"
	        android:shadowDx="0"
	        android:shadowDy="2"
	        android:shadowRadius="1" />

    </RelativeLayout>

</RelativeLayout>