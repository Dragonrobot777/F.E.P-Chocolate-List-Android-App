<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    
    <TextView
        android:id="@+id/name_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:textIsSelectable="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:singleLine="false" />

	<RelativeLayout
	    android:id="@+id/text_container"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity = "bottom"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="22dp" >

	    <ImageView
	        android:id="@+id/logo_image_view"
	        android:layout_width="67dp"
	        android:layout_height="67dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="5dp"
	        android:contentDescription="@string/company_logo"
	        android:background="@drawable/logo_image" />
	
	    <TextView
	        android:id="@+id/status_label"
	        android:layout_width="wrap_content"
	        android:layout_height="17dp"
	        android:layout_alignLeft="@+id/logo_image_view"
	        android:layout_alignTop="@+id/name_label"
	        android:layout_marginLeft="74dp"
	        android:layout_marginTop="13dp"
	        android:textIsSelectable="false"
	        android:textColor="#ffffff"
	        android:textSize="12sp"
	        android:textStyle="bold"
	        android:shadowColor="#000000"
	        android:shadowDx="0"
	        android:shadowDy="1"
	        android:shadowRadius="1"
	        android:paddingLeft="4dp"
	        android:paddingRight="4dp" />
	
	    <TextView
	        android:id="@+id/notes_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/logo_image_view"
	        android:layout_alignTop="@+id/status_label"
	        android:layout_marginLeft="74dp"
	        android:layout_marginTop="20dp"
	        android:textIsSelectable="false"
	        android:textColor="#a9a9a9"
	        android:textSize="12sp"
	        android:singleLine="false" />
	</RelativeLayout>

    <TextView
        android:id="@+id/status_reason_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:textIsSelectable="false"
        android:textColor="#555555"
        android:textSize="12sp"
        android:singleLine="false"
        android:ellipsize="end" />

	<net.shikii.widgets.SAutoBgButton
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:textColor="#000000"
        android:id="@+id/button_toggle_favourite"
        android:textOn="@string/remove_from_favourites"
        android:textOff="@string/add_to_favourites"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="#ffffff"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/icon_favourite_off"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:drawablePadding="5dp"
	    />

	<Button
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/button_share_on_twitter"
        android:text="@string/post_to_twitter"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="#ffffff"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/icon_twitter"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:drawablePadding="5dp"
	    />

	<Button
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/button_share_on_facebook"
        android:text="@string/post_to_facebook"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="#ffffff"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/icon_facebook"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:drawablePadding="5dp"
	    />
</LinearLayout>